{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "lib/esm",
    "declaration": false,
    "noEmit": false
  },
  "include": [
    "src/index.ts",
    "src/tests.spec.ts"
  ]
}
